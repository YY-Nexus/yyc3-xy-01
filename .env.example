# YYC³ AI 小雨 - 环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# ================================
# 基础配置
# ================================
# 运行环境 (development|staging|production|test)
NODE_ENV=development

# 应用端口 (默认3200-3500范围)
PORT=3200

# 应用基础信息
APP_NAME=YYC³ AI 小雨
APP_VERSION=1.0.0
APP_DESCRIPTION=智能插拔式移动AI系统

# 调试配置
DEBUG=true
LOG_LEVEL=debug

# ================================
# 数据库配置
# ================================
# PostgreSQL配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yyc3_ai_xiaoyu
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# ================================
# 安全配置
# ================================
# JWT配置 (生产环境必须设置强密钥)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 安全头配置
SECURITY_HEADERS_ENABLED=true
HELMET_ENABLED=true

# ================================
# 日志配置
# ================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FORMAT=json

# ================================
# AI服务配置
# ================================
# BigModel API配置 (智谱AI)
NEXT_PUBLIC_BIGMODEL_API_KEY=your_bigmodel_api_key_here

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Anthropic配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI配置
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# 百度AI配置
BAIDU_AI_API_KEY=your_baidu_ai_api_key_here
BAIDU_AI_SECRET_KEY=your_baidu_ai_secret_key_here

# AI功能开关
AI_ENABLED=true
AI_CHAT_ENABLED=true
AI_IMAGE_GENERATION_ENABLED=false
AI_VOICE_RECOGNITION_ENABLED=false

# AI服务URL
NEXT_PUBLIC_AI_API_URL=https://api.0379.email/v1

# ================================
# 文件存储配置
# ================================
# 存储类型 (local|s3|aliyun-oss|qiniu)
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# AWS S3配置
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# 阿里云OSS配置
ALIYUN_OSS_ACCESS_KEY_ID=your_aliyun_oss_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET=your_aliyun_oss_access_key_secret
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET=your_aliyun_oss_bucket_name

# ================================
# 邮件服务配置
# ================================
# SMTP配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# 邮件发送配置
EMAIL_FROM=noreply@yyc3.com
EMAIL_REPLY_TO=support@yyc3.com
EMAIL_ENABLED=false

# ================================
# 监控配置
# ================================
# 性能监控
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1000

# 健康检查
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# 指标收集
METRICS_ENABLED=false
METRICS_PATH=/metrics

# 错误追踪
ERROR_TRACKING_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# ================================
# 缓存配置
# ================================
# Redis缓存配置
CACHE_TTL=3600
CACHE_PREFIX=yyc3:
CACHE_ENABLED=true

# 缓存策略
CACHE_STRATEGY=redis
MEMORY_CACHE_SIZE=100

# ================================
# UI配置
# ================================
# 主题配置
DEFAULT_THEME=light
PRIMARY_COLOR=#3B82F6
SECONDARY_COLOR=#8B5CF6

# 布局配置
HEADER_HEIGHT=64px
SIDEBAR_WIDTH=256px
CONTENT_PADDING=24px
MAX_CONTENT_WIDTH=1200px

# 动画配置
ANIMATION_ENABLED=true
ANIMATION_DURATION=0.3s
ANIMATION_TIMING_FUNCTION=cubic-bezier(0.4, 0, 0.2, 1)

# Next.js 公共配置
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_APP_URL=http://localhost:3200
NEXT_PUBLIC_APP_NAME=YYC³ AI 小雨
NEXT_PUBLIC_DEFAULT_LOCALE=zh
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_VOICE_CHAT=true
NEXT_PUBLIC_ENABLE_EMOTION_ANALYSIS=true
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_HOT_RELOAD=true

# 功能开关
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_FEATURE_FLAG_AI_V2=true

# ================================
# 国际化配置
# ================================
# 语言配置
DEFAULT_LANGUAGE=zh-CN
SUPPORTED_LANGUAGES=zh-CN,en-US

# 本地化配置
FALLBACK_LANGUAGE=zh-CN
DETECT_LANGUAGE=true

# ================================
# API配置
# ================================
# API版本配置
API_VERSION=v1
API_PREFIX=/api

# API限制配置
API_MAX_PAYLOAD_SIZE=10mb
API_TIMEOUT=30000

# API文档配置
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs