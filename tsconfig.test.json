 * @created 2025-01-20
 * @modified 2025-01-20
 * @copyright Copyright (c) 2025 YYC³
 * @license MIT
 */

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types", "@testing-library/jest-dom", "jsdom"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}