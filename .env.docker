# YYC³ AI小语智能成长守护系统 - 环境变量配置
# Intelligent Pluggable Mobile AI System - Environment Configuration
# Phase 1 Week 7-8: DevOps与部署优化

# ========================
# 应用基础配置
# ========================
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production
PORT=1229
API_GATEWAY_PORT=1229
TOOL_SERVICE_PORT=3001
KNOWLEDGE_SERVICE_PORT=3002
HOSTNAME=0.0.0.0

# ========================
# 数据库配置
# ========================
POSTGRES_DB=yyc3_ai
POSTGRES_USER=yyc3
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://yyc3:your_secure_postgres_password@postgres:5432/yyc3_ai

# ========================
# Redis缓存配置
# ========================
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis:6379

# ========================
# AI服务配置
# ========================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# ========================
# 安全配置
# ========================
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
SESSION_SECRET=your_session_secret_key
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# ========================
# 监控配置
# ========================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# ========================
# 日志配置
# ========================
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5044

# ========================
# 外部服务配置
# ========================
NEXT_PUBLIC_API_URL=http://localhost:1229
NEXT_PUBLIC_WS_URL=ws://localhost:1229
NEXT_PUBLIC_CDN_URL=https://cdn.yanyu.asia

# ========================
# 邮件服务配置
# ========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ========================
# 文件存储配置
# ========================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg
STORAGE_TYPE=local

# ========================
# 性能配置
# ========================
MAX_CONNECTIONS=100
CACHE_TTL=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ========================
# SSL/TLS配置 (生产环境)
# ========================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ========================
# 开发环境配置
# ========================
# NODE_ENV=development
# NEXT_PUBLIC_ENVIRONMENT=development
# LOG_LEVEL=debug
# ENABLE_PROFILING=true